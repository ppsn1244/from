<body>
  <div id="app" class="container">
    <form action="/action_page.php">
        <h1>Student Information</h1>
        <p>Please fill out this form.</p>

        <label for="student-id"><b>Student ID</b></label>
        <input type="text" v-model="student.id" placeholder="Enter id" name="student-id" id="student-id" required>

        <label for="name"><b>Name</b></label>
        <input type="text" v-model="student.name"placeholder="Enter name" name="name" id="name" required>

        <label for="surname"><b>Surname</b></label>
        <input type="text"v-model="student.surname" placeholder="Enter surname" name="surname" id="surname" required>

        <label for="email"><b>Email</b></label>
        <input type="text"v-model="student.email" placeholder="Enter Email" name="email" id="email" required>

        <label for="gpa"><b>GPA</b></label>
        <input type="text" v-model="student.gpa"placeholder="GPA" name="gpa" id="gpa" required>
    </form>
    <button @click="Add()" class="registerbtn">Register</button>
    <h2>HTML Table</h2>

    <table>
      <tr>
        <th>studentID</th>
        <th>name</th>
        <th>surname</th>
        <th>email</th>
        <th>gpa</th>
        <th>Delete</th>
      </tr>
      <tr v-for="(item,index) in studentList" v-if="item.gpa<2.00" v-bind:style="{color:'red','font-weight':'bold'}">
        <td>{{item.id}}</td>
        <td>{{item.name}}</td>
        <td>{{item.surname}}</td>
        <td>{{item.email}}</td>
        <td>{{item.gpa}}</td>
        <td><button @click="Del">delete</button></td>
      </tr>
      <tr v-for="(item,index) in studentList" v-if="item.gpa>2.00" >
        <td>{{item.id}}</td>
        <td>{{item.name}}</td>
        <td>{{item.surname}}</td>
        <td>{{item.email}}</td>
        <td>{{item.gpa}}</td>
        <td><button @click="Del">delete</button></td>
      </tr>
    </table>
  </div>
  <p id="demo"></p>
  <script>
    var app = new Vue({
      el: "#app",
      data: {
        message: "hello Vue",
        student: { id: "", name: "", surname: "", email:'',gpa: '' },

        studentList: [
          { id: 0000, name: "p", surname: "p", email: "mju6304101354@gmeajo.ac.th", gpa: '4.00' },
         
        ],
      },
      methods: {
        Add:function(){
          this.studentList.push({
            id:this.student.id,
            name:this.student.name,
            surname:this.student.surname,
            email:this.student.email,
            gpa:this.student.gpa,
          })
        },
        Del:function(n){
          this.studentList.splice(n,1)
        }
      },
     
    });
  </script>


